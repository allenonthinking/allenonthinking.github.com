// JavaScript Document
$(function(){
	$('.t2033-nav-category-category .t2033-nav-category-category-con').hover(function(){
		$(this).children('h2').siblings('.t2033-prolist-allsort').show();	
	},function(){
		$(this).children('h2').siblings('.t2033-prolist-allsort').hide();	
	})
	$('.t2033-nav-category-category').find('.t2033-prolist-allsort').hide();
})
$(function () {
	//$('.sortlist dl:last-child').css("border",0)
    $(".sortlist dl").hover(function () {
        $(".menulist").fadeIn();
        var index = $(this).index(".sortlist dl");

        $(this).addClass("menulihover").siblings().removeClass("menulihover");
        $($(".menulistin")[index]).animate({ opacity: "0.95", "padding-left": "20px" }, 200).show().siblings().animate({ opacity: "0.75", "padding-left": "5px" }, 200).hide();
    }, function () {
    });
    $(".t2033-prolist-allsort").mouseleave(function () {
		//alert("")
        $(".menulist").fadeOut();
        $(".menulistin").fadeOut();
        $(".sortlist dl").removeClass("menulihover");

    });
	})
	
	/*搜索下拉*/
	$(".t1036-com-tagselect").live("click",function(){
		  if($(".t1036-com-tagoptions").display="none"){
				$(".t1036-com-tagoptions").slideDown("fast");
				}else{
				$(".t1036-com-tagoptions").slideUp("fast");
		  }		
	});
	 
	/*点击任何地方关闭层*/
	$(document).click(function(event) {
		if ($(event.target).attr("class") != "t1036-com-tagselect") {
			$(".t1036-com-tagoptions").slideUp("fast");
		}
	});

