$(function(){
	// 加载联盟广告
	var uad_positions = $("div[uadver_type]");// 广告位数量
	var length = uad_positions.length;
	if (length > 0) {
		// 循环加载联盟广告
		for (var i = 0; i < length; ++i) {
			var type = $(uad_positions[i]).attr("uadver_type");
			var cateInd = $(uad_positions[i]).attr("uadver_cate");
			$.post("/ModuleCenter/unionad/list/all.json", {"type":type, "cateInd":cateInd, "pageChannel":$("#page_channel_val").val()}, function(data) {
				if (data && data.length > 0) {
					var str = '<a href="' + data[0].innerUrl + '" target="_blank" title="">'
		   				+'<img src="' + data[0].content + '" alt="">'
		   				+'</a>';
					$("#uad_div_ele").find(".advertising-common-single-img").append($(str));
					$("#uad_div_ele").css("display", "block");
				} 
			});
		}
	}
});












