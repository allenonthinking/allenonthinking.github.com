/*帮找货*/
$(function(){
	
	function inputTipText(obj,initText) {
		$("."+obj).each(function() {
				var _this = $(this);
			   if($.trim(_this.val()) == '' || $.trim(_this.val()) == initText){
				   _this.css({"color":"#999"});
			   }else{
				   _this.css({"color":"#333"});
			   }
			_this.focus(function() {
					if ( $.trim(_this.val()) == initText) {
						_this.val('').css({"color":"#333"});
				 }})
				.blur(function() {
				if (!_this.val() || $.trim(_this.val()) == '' || $.trim(_this.val()) ==initText) {
					_this.val(initText).css({"color":"#999","border":"none"});
				}
			}).keydown(function() {
				_this.css({"color":"#333"})
			})
		});
	}  	
	inputTipText("t1075-ind-goods-textarea","填写您的真实需求");
	inputTipText("t1075-ind-goods-textarea-tell","联系电话");
	
 	$("#div2 .div2_close").click(function(){
		$("#div2").slideUp(200);
	})
	
	
	function isGHide(obj){
		$(obj).each(function(){
			var ad_con=$.trim($(this).html());		
			if(  ad_con == ""){
				$("#div2").hide();
				
			}else{
				$("#div2").show();
			}			
		})			
	}	
	
	isGHide(".t1075-ind-goods-form-box");
	
	/*判断标签内容是否为空*/
		function IsEmpty(obj){
			$(obj).each(function(){
				var ad_con=$.trim($(this).html());
				var ad_con_in=$.trim($(this).children().first().html());
				if(  ad_con == "" || ad_con_in == "" ){
					$(this).parent().hide();
				}else{
					$(this).parent().show();
				}
			
			})
			
		}
			IsEmpty(".ad_flex_con");
			IsEmpty(".fullAd-1000X90-con");
			IsEmpty(".artListAd-300X80-con");
			IsEmpty(".artDetailAd-300X250-con");
			IsEmpty(".listComAd-188X218-con");
	
})