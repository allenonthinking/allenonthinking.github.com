$(function () {

    //floor
    $('.substance li').hover(function () {
        $(this).siblings().stop().fadeTo(600, 0.5)
    }, function () {
        $(".substance li").siblings().stop().fadeTo(600, 1)
    });

	/*首页顶部轮播*/
	banner(
		$bannerPic=$(".t2032-ind-banner-con .advertising-common-slide"),
		Icon="on"
	);
	banner(
		$bannerPic=$("#t2032-ind-artLeft .advertising-common-slide"),
		Icon="on"
	)
	banner(
		$bannerPic=$(".t1127-ind-full-adcolumn1-con .advertising-common-slide"),
		Icon="on"
	)
});

/*弹窗*/
$(function(){
	
	$(".t2039-ind-tanAd .tan_close").click(function(){
		$(".t2039-ind-tanAd").animate({"bottom":"-270px"},1000);
	})
	if($.trim($(".t2039-ind-tanAd-con").html())=="" || $.trim($(".t2039-ind-tanAd-con .advertising-common-single-html").html())==""){
		$(".t2039-ind-tanAd").hide();	
	}

})
