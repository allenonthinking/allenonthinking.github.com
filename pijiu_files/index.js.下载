});
});

/*轮播*/
function banner($bannerPic,Icon){
	var num=0;
	var timer=null;
	$("ul",$bannerPic).append($("ul li",$bannerPic).clone());
	var liNum=$("ul li",$bannerPic).length/2;
	var liW=$("ul li:eq(0)",$bannerPic).width();//一个图片的宽度
	$("ol li",$bannerPic).click(function(){
		$(this).addClass(Icon).siblings().removeClass(Icon);
		var index=$(this).index();
		$(this).parent().siblings("ul").find("li").eq(index).show().fadeTo(300,1.0).siblings().fadeTo(300,0).hide();		
		num=index;	
	})
	function palyBanner(){
		if(num>=liNum){
			$("ul li",$bannerPic).eq(num).show().fadeTo(300,1.0).siblings().fadeTo(300,0).hide();
			$("ol li",$bannerPic).eq(0).addClass(Icon).siblings().removeClass(Icon);	
			num=1;
		}else{
			$("ol li",$bannerPic).eq(num).addClass(Icon).siblings().removeClass(Icon);	
			$("ul li",$bannerPic).eq(num).show().fadeTo(300,1.0).siblings().fadeTo(300,0).hide();
			num++;	
		}
	}
	var timer=setInterval(palyBanner,3000);
	$bannerPic.hover(
		function(){
			clearInterval(timer);
		},
		function(){
			timer=setInterval(palyBanner,3000);
		}
	)			
}


//不配置隐藏
$(function(){
		function isHide(obj){
			$(obj).each(function(){
				var ad_con=$.trim($(this).html());
				var ad_con_in=$.trim($(this).children().first().html());
				if(  ad_con == "" || ad_con_in == "" ){
					$(this).parent().hide();
				}else{
					$(this).parent().show();
				}
			
			})
			
		}
		
		isHide(".adapt");
		

})


/*配置显示不配置隐藏*/
