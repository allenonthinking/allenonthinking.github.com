					$(this).parent().hide();
				}else{
					$(this).parent().show();
				}
			
			})
			
		}
		isHide(".t1075-ind-goods-form-box");
				/*isHide(".is_hide");*/
		
})
 /*帮我找js*/
$(function () {


	
	
	/*帮我找*/
	var setName1
	
			  
			  
    $("#div2 .div2_close").click(function(){
		$("#div2").slideUp(200);
	})
	
	$("#div .div2_close,#div1 .div2_close").click(function(){
		$("#div").hide(200);
		$("#div1").hide(200);
	})
	
	
	var hFloat = $('#hFloat');
    if ( !($.browser.msie && (parseInt($.browser.version) < 7)) ) {
        $(window).scroll(function () {
            var bScrollTop = $(window).scrollTop(),
                height = $(window).height();
            if (bScrollTop > height) {
                hFloat.show();
            } else {
                hFloat.hide();
            }
        });
    }
	
	$("#goTop").click(function(){
		$(document).scrollTop(0);
		return false;
	});
	$("#hFloat").mouseleave(function(){
		$(".t2000-common-service").hide();
		$(".ewm-box").hide();
	});
	
	$(".service-wrap").mouseenter(function(){
		$(".t2000-common-service").show(200);
	}).mouseleave(function(){
		$(".t2000-common-service").hide();
	})
	
	$(".ewm-wrap").mouseenter(function(){
		$(".ewm-box").show(200);
		
	}).mouseleave(function(){
		$(".ewm-box").hide();
	})

  	
	function inputTipText(obj,initText) {
		$("."+obj).each(function() {
				var _this = $(this);
			   if($.trim(_this.val()) == '' || $.trim(_this.val()) == initText){
				   _this.css({"color":"#999"});
			   }else{
				   _this.css({"color":"#333"});
			   }
			_this.focus(function() {
					if ( $.trim(_this.val()) == initText) {
						_this.val('').css({"color":"#333"});
				 }})
				.blur(function() {
				if (!_this.val() || $.trim(_this.val()) == '' || $.trim(_this.val()) ==initText) {
					_this.val(initText).css({"color":"#999","border":"none"});
				}
			}).keydown(function() {
				_this.css({"color":"#333"})
			})
		});
	}  	
	function inputTipText1(obj,initText) {
		$("."+obj).each(function() {
				var _this = $(this);
			   if($.trim(_this.val()) == '' || $.trim(_this.val()) == initText){
				   _this.css({"color":"#999"});
			   }else{
				   _this.css({"color":"#333"});
			   }
			_this.focus(function() {
					if ( $.trim(_this.val()) == initText) {
						_this.val('').css({"color":"#333"});
				 }})
				.blur(function() {
				if (!_this.val() || $.trim(_this.val()) == '' || $.trim(_this.val()) ==initText) {
					_this.val(initText).css({"color":"#999"});
				}
			}).keydown(function() {
				_this.css({"color":"#333"})
			})
		});
	}
 	
	$(function(){     
		inputTipText1("grayTips","请输入您感兴趣的内容");
		inputTipText("t1075-ind-goods-textarea","填写您的真实需求");
		inputTipText("t1075-ind-goods-textarea-tell","联系电话");
		$(".t1075-ind-goods-textarea").css({"border":"none"});		
		$(".t1075-ind-goods-textarea-tell").val("联系电话").css({"border":"none"});
		return false;     
	})
});
